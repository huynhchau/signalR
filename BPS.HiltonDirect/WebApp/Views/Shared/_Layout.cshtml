<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/bundles/Content")
</head>
<body id="mainbody">
    <div class="container body-content" data-app="rootModule">
        <div class="row header">
            <div class="col-md-12">
                <div class="text-center">
                    <img src="~/Content/images/HiltonBrands.png" style="width: 100%; padding-top: 10px;" />
                </div>
            </div>
        </div>
        @RenderBody()
        <div ui-view></div>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/libraries/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        _bpsEnvironment = {
            appUrl: "http://localhost:23232",
            debug: true
        };
        bps.bootstraper.init();
    </script>
</body>
</html>

